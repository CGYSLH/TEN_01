<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--
    设置美图的布局外围为scroll让其可以滚动
    在里面写入一些布局的文件
    -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_fr_item_pictures">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="380dp"
               android:id="@+id/item_pictures_images"
               android:src="@drawable/pic_loading169"
               android:scaleType="fitXY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:id="@+id/item_pictures_titles"
                android:textColor="#101012"
                android:textIsSelectable="true"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="标题"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textIsSelectable="true"
                android:id="@+id/item_pictures_authorbrief"
                android:text="来源"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="20dp"
                android:background="#d2dad2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_pictures_text1"
                android:textIsSelectable="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="10dp"
                android:text="小小介绍"
                android:textColor="#242624"
                android:textSize="15sp"
                android:background="#e8ece8"
                android:layout_marginBottom="60dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
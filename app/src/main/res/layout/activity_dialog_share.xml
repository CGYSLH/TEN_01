<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dialog_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mi.ten.DialogActivityShare">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_share"
            android:text="分享至"
            android:textSize="25sp"
            android:textColor="#cbb6e7"
            android:gravity="center"/>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_below="@id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/up">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000ff00"
                android:id="@+id/but0"
                android:src="@drawable/share_favorite"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000ff00"
                android:id="@+id/but1"
                android:src="@drawable/share_weixin"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000ff00"
                android:id="@+id/but2"
                android:src="@drawable/share_pengyouquan"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/up"
            android:layout_marginTop="30dp"
            android:id="@+id/down">
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000ff00"
                android:id="@+id/but3"
                android:src="@drawable/share_weibo"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000ff00"
                android:id="@+id/but4"
                android:src="@drawable/share_qq_bound"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000ff00"
                android:id="@+id/but5"
                android:src="@drawable/share_qqzone_bound"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

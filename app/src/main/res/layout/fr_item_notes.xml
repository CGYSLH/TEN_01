<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--
   设置美文的布局外围为scroll让其可以滚动
   在里面写入一些布局的文件
   -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_fr_item_notes">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_notes_title"
                    android:text="标题"
                    android:textColor="#090a09"
                    android:textStyle="bold"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_notes_author"
                    android:textIsSelectable="true"
                    android:text="作者"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_notes_summary"
                android:textIsSelectable="true"
                android:padding="15dp"
                android:text="小小介绍"
                android:textColor="#242624"
                android:textSize="15sp"
                android:background="#e8ece8"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_notes_text"
                android:textSize="16sp"
                android:textIsSelectable="true"
                android:text="剧情介绍内容"
                android:textColor="#3b3d3b"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="15dp"
                android:background="#d2dad2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_notes_author_big"
                android:textIsSelectable="true"
                android:textSize="20dp"
                android:textColor="#0b0b0b"
                android:layout_margin="10dp"
                android:text="作者"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_notes_authorbrief"
                android:textSize="16sp"
                android:textIsSelectable="true"
                android:text="作者评价"
                android:layout_margin="10dp"
                android:textColor="#3b3d3b"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>